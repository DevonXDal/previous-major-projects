@model DevonDalrympleUnitConverter.MVC.Models.FahrenheitModel

@{
    ViewData["Title"] = "Fahrenheit to Celsius Conversions Page";
}

<br />
<div>
    <a asp-controller="Conversions" asp-action="" class="btn btn-info">Go Back</a>
    <h3>Your Conversion has Completed</h3>

    @if (@Model == null)
    { 
        <h3>Fahrenheit: @ViewData["Fahrenheit "]</h3>
        <h3>Celsius: @ViewData["Celsius"]</h3>
    }
    else
    {
        <h3>Fahrenheit: @Model.Fahrenheit</h3>
        <h3>Celsius: @Model.OutputValue.</h3>
        
    }
    
</div>