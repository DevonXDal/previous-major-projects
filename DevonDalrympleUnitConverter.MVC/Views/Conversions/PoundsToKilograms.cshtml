@model DevonDalrympleUnitConverter.MVC.Models.PoundsModel

@{
    ViewData["Title"] = "Tons Of TNT to Average Phone Capacity Conversions Page";
}

<br />
<div>
    <a asp-controller="Conversions" asp-action="" class="btn btn-info">Go Back</a>
    <h3>Your Conversion has Completed</h3>

   @if (@Model == null)
    { 
        <h3>Pounds: @ViewData["Pounds"]</h3>
        <h3>Kilograms: @ViewData["Kilograms"]</h3>
    }
    else
    {
        <h3>Pounds: @Model.Pounds</h3>
        <h3>Kilograms: @Model.OutputValue.</h3>
    }

    
</div>